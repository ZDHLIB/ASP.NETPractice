@model OdeToFood.ViewModels.HomeIndexViewModel

@{ 
    ViewBag.Title = "Index page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.CurrentMessage</h1>
<table>
    @foreach (var restaurant in Model.Restaurants) {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>
                <a href="/home/details/@restaurant.Id">Details</a>
                @Html.ActionLink("Go", "Details", new {id= restaurant.Id});
                @*asp-route-${parameter name}*@
                <a asp-controller="Home" asp-action="Details" asp-route-id="@restaurant.Id">More</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Create" asp-controller="Home">Add Restaurant</a>

@section footer{ 
    @Model.CurrentMessage
}
